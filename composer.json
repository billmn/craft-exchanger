{
    "name": "billmn/craft-exchanger",
    "description": "Automatically update currency conversion rate",
    "type": "craft-plugin",
    "license": "mit",
    "support": {
        "email": "bellini.davide@gmail.com",
        "issues": "https://github.com/billmn/craft-exchanger/issues?state=open",
        "source": "https://github.com/billmn/craft-exchanger",
        "docs": "https://github.com/billmn/craft-exchanger",
        "rss": "https://github.com/billmn/craft-exchanger/releases.atom"
    },
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.4.0",
        "craftcms/commerce": "^4.2.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "billmn\\exchanger\\": "src/"
        }
    },
    "extra": {
        "handle": "exchanger",
        "name": "Exchanger",
        "developer": "Davide Bellini",
        "documentationUrl": "https://github.com/billmn/craft-exchanger",
        "class": "billmn\\exchanger\\Exchanger"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}

